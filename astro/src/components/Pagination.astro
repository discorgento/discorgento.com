---
interface Props {
  currentPage: number
  disablePrevious?: boolean
  disableNext?: boolean
}

const { currentPage, disableNext, disablePrevious } = Astro.props
---

<div class=`flex justify-between flex w-full`>
  {
    <a
      href={`/articles?page=${currentPage - 1}`}
      class={`inline-block bg-slate-700 px-3 py-2 hover:bg-slate-900 text-white rounded-lg ${disablePrevious ? '': ''}`}
    >
      Anterior
    </a>
  }
  {
    <a
      href={`/articles?page=${currentPage + 1}`}
      class={`inline-block bg-slate-700 px-3 py-2 hover:bg-slate-900 text-white rounded-lg ${disableNext ? '' : ''}`}
    >
      Pr√≥xima
    </a>
  }
</div>
